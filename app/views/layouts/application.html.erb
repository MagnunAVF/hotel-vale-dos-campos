<!DOCTYPE html>
<html>
  <head>
    <title>Hotel</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="ui grid">
      <div class="left floated column">
        <%= image_tag('logo.png') %>
      </div>
      <%= render 'layouts/social_medias' %>
    </div>

    <div class="nav_menu">
      <% if user_signed_in? %>
        <% if current_user.type == "Employee" %>
          <%= render 'layouts/employee_navbar' %>
        <% else %>
          <%= render 'layouts/client_navbar' %>
        <% end %>
      <% else %>
        <%= render 'layouts/visitors_navbar' %>
      <% end %>
    </div>

    <% if notice %>
      <div class="ui inverted orange segment">
        <p class="notice"><%= notice %></p>
      </div>
    <% end %>

    <% if alert %>
      <div class="ui inverted red segment">
        <p class="alert"><%= alert %></p>
      </div>
    <% end %>

    <%= yield %>

  </body>
</html>
