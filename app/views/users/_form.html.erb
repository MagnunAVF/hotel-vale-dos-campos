<%= form_for(user) do |f| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :cpf %>
    <%= f.number_field :cpf %>
  </div>

  <div class="field">
    <%= f.label :address %>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :birthday %>
    <%= f.date_select :birthday %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>

  <div class="field">
    <%= f.label :fone %>
    <%= f.number_field :fone %>
  </div>

  <% if @type == "Employee" %>
    <%= f.hidden_field :type, value: "Employee" %>
  <% else %>
    <%= f.hidden_field :type, value: "Client" %>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
